{
  "name": "strava-ncc-scrape",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=24 <25"
  },
  "license": "MIT",
  "scripts": {
    "predev": "node check-node.js",
    "predev:all": "node check-node.js",
    "dev": "vite",
    "dev:server": "cd server && npm run dev",
    "dev:all": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm:dev:server\" \"npm:dev\"",
    "start": "cd server && npm start",
    "stop": "npm run cleanup",
    "cleanup": "pkill -f nodemon 2>/dev/null || true; pkill -f 'vite' 2>/dev/null || true; pkill -f 'node src/index.js' 2>/dev/null || true; lsof -ti:3001 2>/dev/null | xargs kill -9 2>/dev/null || true; lsof -ti:5173 2>/dev/null | xargs kill -9 2>/dev/null || true",
    "build": "npm run build:server && npm run build:frontend",
    "build:frontend": "vite build",
    "build:server": "cd server && npm install",
    "test": "cd server && npm test",
    "test:watch": "cd server && npm run test:watch",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "audit": "npm audit && cd server && npm audit || true",
    "audit:fix": "npm audit fix && cd server && npm audit fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "check": "npm run audit && npm run typecheck && npm run lint && npm run lint:backend && npm run build && npm test",
    "lint:backend": "npm --prefix server run lint",
    "lint:all": "npm run lint && npm run lint:backend",
    "preview": "vite preview",
    "postinstall": "cd server && npm install",
    "prepare": "node scripts/install-hooks.cjs"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "strava-api-client": "^1.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^9.2.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "sharp": "^0.34.5",
    "typescript": "^5.0.2",
    "vite": "^7.2.2"
  }
}
