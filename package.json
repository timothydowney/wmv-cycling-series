{
  "name": "strava-ncc-scrape",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20 <=25"
  },
  "scripts": {
    "predev": "node check-node.js",
    "predev:all": "node check-node.js",
    "dev": "vite",
    "dev:server": "cd server && npm run dev",
    "dev:all": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm:dev:server\" \"npm:dev\"",
    "stop": "npm run cleanup",
    "cleanup": "pkill -f nodemon 2>/dev/null || true; pkill -f 'vite' 2>/dev/null || true; pkill -f 'node src/index.js' 2>/dev/null || true; lsof -ti:3001 2>/dev/null | xargs kill -9 2>/dev/null || true; lsof -ti:5173 2>/dev/null | xargs kill -9 2>/dev/null || true",
    "build": "npm run build:server && vite build",
    "build:server": "cd server && npm install",
    "test": "cd server && npm test",
    "test:watch": "cd server && npm run test:watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "postinstall": "cd server && npm install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "strava-api-client": "^1.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^9.2.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
